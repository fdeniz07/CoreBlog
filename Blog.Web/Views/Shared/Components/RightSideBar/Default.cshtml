@model ArticleDetailRightSideBarViewModel
<div class="col-md-4">
    <!--right-->
    <div class="tech-btm">
        <img src="~/CoreBlog/images/banner1.jpg" class="card-img-top img-fluid" alt="">
    </div>
    <div class="tech-btm">
        <h4>Bültene Abone Ol</h4>
        <p>Mail adresinizi girerek yeniliklerden abone olabilirsiniz</p>
        <form action="#" method="post">
            <input type="email" placeholder="Email" required="">
            <input type="submit" value="Abone Ol">
        </form>
    </div>
    <!--Writer About-->
    <div class="card" style="border-style: outset">
        <h3 class="card-header text-center">Yazar Hakkında</h3>
        <img src="~/CoreBlog/images/t1.jpg" class="card-img-top text-center image-thumbnail mt-1 mb-1" alt="@Model.Writer.UserName" />
        <h5 class="card-header text-center">@Model.Writer.UserName</h5>
        <div class="card-body">
            <p class="card-text text-center">@Model.Writer.About</p>
            <div class="card-footer text-center">
                @*<div class="col-md-4 log-icons text-right">*@
                <div class="social_list1">
                    @*<ul class="social_list1 mt-3">*@
                    <p>Sosyal Medya Linkleri</p>
                    <br />
                    <div class="row">
                        @if (Model.Writer.LinkedInLink != null)
                        {
                            <a href="@Model.Writer.LinkedInLink" class="linkedin6 mx-2"><span class="fab fa-linkedin"></span></a>
                        }

                        @if (Model.Writer.GitHubLink != null)
                        {
                            <a href="@Model.Writer.GitHubLink" class="github1 mx-2"><span class="fab fa-github"></span></a>
                        }

                        @if (Model.Writer.TwitterLink != null)
                        {
                            <a href="@Model.Writer.TwitterLink" class="twitter2 mx-2"><i class="fab fa-twitter"></i></a>
                        }
                        @if (Model.Writer.FacebookLink != null)
                        {
                            <a href="@Model.Writer.FacebookLink" class="facebook1 mx-2"><i class="fab fa-facebook-f"></i></a>
                        }

                        @if (Model.Writer.YoutubeLink != null)
                        {
                            <a href="@Model.Writer.YoutubeLink" class="youtube1 mx-2"><i class="fab fa-youtube"></i></a>
                        }

                        @if (Model.Writer.InstagramLink != null)
                        {
                            <a href="@Model.Writer.InstagramLink" class="instagram1 mx-2"><i class="fab fa-instagram"></i></a>
                        }

                        @if (Model.Writer.WebsiteLink != null)
                        {
                            <a href="@Model.Writer.WebsiteLink" class="homepage1"><i class="fas fa-home"></i></a>
                        }
                    </div>
                    @*</ul>*@
                </div>
                @*</div>*@
            </div>
        </div>
    </div>
    <br />
    <!--// Writer About-->
    <!--Writer Blogs-->
    <div class="card" style="border-style: outset">
