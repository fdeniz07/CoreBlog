            @for (int i = 0; i < Model.ArticleListDto.Articles.Count; i++)
            {
                if (i % 2 == 0)
                {
        <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-primary">
            <a asp-controller="Article" asp-action="Detail" asp-route-categoryId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title - @Model.ArticleListDto.Articles[i].Date.ToShortDateString()</a>

