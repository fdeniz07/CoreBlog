@using System.Text.RegularExpressions
@model ArticleDetailViewModel


@{
    //ViewData["Title"] = "Detail";
    Layout = "_ArticleLayout";
    ViewBag.Title = Model.ArticleDto.Article.Title;
    ViewBag.Description = Model.ArticleDto.Article.SeoDescription;
    ViewBag.Author = Model.ArticleDto.Article.SeoAuthor;
    ViewBag.Tags = Model.ArticleDto.Article.SeoTags;
    Regex regex = new Regex("<[^>]*>"); //Editörden gelen text deki html etiketlerini kaldirmak icin kullaniyoruz.
}
<!--left-->
<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
    <div class="blog-grid-top">
        <div class="b-grid-top">
            <div class="blog_info_left_grid">
                <a href="#">
                    <img src="~/CoreBlog/images/b1.jpg" class="img-fluid" alt="">
                </a>
            </div>
            <div class="blog-info-middle">
                <ul>
                    <li>
                        <a href="#"><i class="far fa-calendar-alt"></i> @Model.ArticleDto.Article.Date.ToShortDateString()</a>
                    </li>
                    <li class="mx-2">
                        <a href="#"><i class="fas fa-eye"></i> @Model.ArticleDto.Article.ViewCount</a>
                    </li>
                    <li>
                        <a href="#"><i class="far fa-comment"></i> @Model.ArticleDto.Article.CommentCount</a>
                    </li>
                </ul>
            </div>
        </div>
        <h1 class="mt-4">@Model.ArticleDto.Article.Title</h1>
        <!-- Author -->
        <p class="lead">@Model.ArticleDto.Article.Writer.FirstName @Model.ArticleDto.Article.Writer.LastName tarafından @Model.ArticleDto.Article.Date.ToShortDateString() tarihinde paylaşılmıştır.</p>
        <!-- Content -->
        @Html.Raw(Model.ArticleDto.Article.Content)
    </div>
    <br />
    <p class="text-center">Okunma Sayısı: <span class="badge badge-info">@Model.ArticleDto.Article.ViewCount</span> Yorum Sayısı: <span class="badge badge-warning">@Model.ArticleDto.Article.CommentCount</span></p>
    <hr>
    @await Html.PartialAsync("~/Views/Comment/CommentAddPartial.cshtml")
    @await Component.InvokeAsync("CommentList")
</div>
<div class="col-md-4">
    <!--right-->
    <div class="tech-btm">
        <img src="~/CoreBlog/images/banner1.jpg" class="card-img-top img-fluid" alt="">
    </div>
    <div class="tech-btm">
        <h4>Bültene Abone Ol</h4>
        <p>Mail adresinizi girerek yeniliklerden abone olabilirsiniz</p>
        <form action="#" method="post">
            <input type="email" placeholder="Email" required="">
            <input type="submit" value="Abone Ol">
        </form>
    </div>
    <!--Writer About-->
    @await Component.InvokeAsync("WriterAbout")
    <br />
    <!--// Writer About-->
    <!--Writer Blogs-->
    @await Component.InvokeAsync("WriterArticles")
    <!--// Writer Blogs-->
</div>
